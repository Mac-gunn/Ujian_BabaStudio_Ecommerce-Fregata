<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment <%= payment[0].no_payment%></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Payment Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Payment Detail</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
              <div class="row">
                <div class="col-12">
                  <h4>Payment No</h4>
                    <div class="post">  
                      <p class="text-lg">
                        <b><%= payment[0].no_payment%></b>
                      </p>
                    </div>
                    <h4>Invoice No</h4>
                    <div class="post">  
                      <p>
                        <%= payment[0].no_faktur %>
                      </p>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
                <div class="row">
                    <div class="col-12">
                            <div class="info-box bg-light">
                                <div class="info-box-content">  
                                    <img src="/public/image/payment/<%= payment[0].gambar%>" class="img-thumbnail">
                                </div>
                              </div>
                        </div>
                </div>
              <div class="text-center mt-5 mb-3">
                  <% if(payment[0].status=="confirming"){ %>
                    <a href="#" class="btn btn-sm btn-primary">Confirm Verified</a>
                  <%} else{%>
                    <a class="btn btn-sm btn-success">Verified</a>
                  <% } %>
               
                  <a href="/admin/brand_edit/>" class="btn btn-sm btn-success">Edit Brand</a>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->

