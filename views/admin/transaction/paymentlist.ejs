
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="col col-sm-10 center">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Payment List</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 20%; text-align: center;">
                          No Payment
                      </th>
                      <th style=" text-align: center;">
                          No Faktur
                      </th>
                      <th style="width: 15%; text-align:center;">
                          Nominal
                      </th>
                      <th style="width: 15%; text-align:center;">
                          Bank
                      </th>
                      <th style="width: 15%; text-align: center;">
                          Action
                      </th>
                  </tr>
              </thead>
              <tbody>
                
                  <%if(payment.length){%>
                    <% for( i = 0 ; i < payment.length; i++){%>
                  <tr>
                      <td style="text-align: center;">
                          <%=payment[i].no_payment %>
                      </td>
                      <td style="text-align: center;">
                         <%= payment[i].no_faktur%>
                      </td>
                      <td >
                         Rp.<div style="float: right;"><%=payment[i].nominal.toLocaleString() %></div>
                      </td>
                      <td style="text-align: center;">
                          <%= payment[i].bank%>
                       </td>
                      <td class="project-actions text-right" style="text-align: center;">
                          <a class="btn btn-primary btn-sm mx-auto" href="/admin/payment/<%=payment[i].no_payment%>">
                              <i class="fas fa-folder">
                              </i>
                              Detail
                          </a>
                      </td>
                  </tr>
                  <% } } %>
                  
              </tbody>
          </table>
        </div>
      </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->


