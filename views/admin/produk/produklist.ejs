
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Product</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="/admin/product_add">
                <button class="btn btn-success">
                  <i class="fas fa-plus"></i>&nbsp;&nbsp;&nbsp;Add Product
                </button>
              </a>
            </li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Product List</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 13%; text-align: center;">
                          Product Code
                      </th>
                      <th style="width: 10%; text-align: center;">
                          Image
                      </th>
                      <th style="width: 17%; text-align= center;">
                          Product Name
                      </th>
                      <th style="width: 5%; text-align: center;">
                          Quantity
                      </th>
                      <th style="width: 10%" class="text-center">
                          Status
                      </th>
                      <th style="width: 20%; text-align: center;">
                          Action
                      </th>
                  </tr>
              </thead>
              <tbody>
                
                  <%if(data.length){%>
                    <% for( i = 0 ; i < data.length; i++){%>
                  <tr>
                      <td style="text-align: center;">
                          <%=data[i].kode_produk %>
                      </td>
                      <td style="text-align: center;">
                         <img src="/public/image/product/<%=data[i].gambar1%>" class="block mx-auto img-thumbnail" style="height: 80px;">
                      </td>
                      <td>
                         <strong><%=data[i].nama_produk %></strong>
                      </td>
                      <td class="text-center">
                          <% if(data[i].quantity < 0 ){%>
                          <div class="text-danger">  <%=data[i].quantity %> </div>
                          <%}else{%> 
                          <div class="text-dark">  <%=data[i].quantity %> </div> 
                          <%}%> 
                      </td>
                      <td class="project-state">
                          <% if(data[i].status == "active"||data[i].status == "Active"){%>
                          <span class="badge badge-success"><%=data[i].status %></span>
                          <%}else{%>
                          <span class="badge badge-danger"><%=data[i].status%></span>
                          <%}%>
                      </td>
                      <td class="project-actions text-right">
                          <a class="btn btn-primary btn-sm" href="/admin/product_detail/<%= data[i].kode_produk%>">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a>
                          <a class="btn btn-info btn-sm" href="/admin/product_edit/<%= data[i].kode_produk%>">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                          <a class="btn btn-danger btn-sm" href="/admin/product_delete/<%= data[i].kode_produk%>">
                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                      </td>
                  </tr>
                  <% } } %>
                  
              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->


